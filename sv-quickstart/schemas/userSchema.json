{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "User Account Data",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "_id": {
                "type": "string",
                "format": "uuid",
                "coerce": true
            },
            "created_at": {
                "type": "string",
                "format": "date-time",
                "description": "When the user account was created"
            },
            "email": {
                "type": "object",
                "properties": {
                    "%share": {
                        "type": "string",
                        "description": "The email address of the wallet owner"
                    }
                },
                "required": [
                    "%share"
                ]
            },
            "secret_salt": {
                "type": "object",
                "properties": {
                    "%share": {
                        "type": "string",
                        "description": "Encrypted wallet-related data (gmail, sheet_id, secret_salt)"
                    }
                },
                "required": [
                    "%share"
                ]
            },
            "sheet_id": {
                "type": "object",
                "properties": {
                    "%share": {
                        "type": "string",
                        "description": "The Google Sheet ID for the user"
                    }
                },
                "required": [
                    "%share"
                ]
            },
            "recovery_email": {
                "type": "object",
                "properties": {
                    "%share": {
                        "type": "string",
                        "description": "The email address to send recovery information to"
                    }
                },
                "required": [
                    "%share"
                ]
            },
            "agent": {
                "type": "object",
                "properties": {
                    "url": {
                        "type": "object",
                        "properties": {
                            "%share": {
                                "type": "string",
                                "description": "The url to interact with the AI agent"
                            }
                        },
                        "required": [
                            "%share"
                        ]
                    },
                    "api_key": {
                        "type": "object",
                        "properties": {
                            "%share": {
                                "type": "string",
                                "description": "API key to interact with the AI agent"
                            }
                        },
                        "required": [
                            "%share"
                        ]
                    }
                },
                "required": [
                    "url",
                    "api_key"
                ]
            },
            "name": {
                "type": "string",
                "description": "Public display name for the user"
            },
            "last_login": {
                "type": "string",
                "format": "date-time",
                "description": "When the user last logged in"
            }
        },
        "required": [
            "_id",
            "name",
            "email",
            "recovery_email",
            "sheet_id",
            "secret_salt",
            "created_at",
            "agent"
        ]
    }
}