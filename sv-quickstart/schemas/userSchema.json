{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "User Account Data",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "_id": {
                "type": "string",
                "format": "uuid",
                "coerce": true
            },
            "created_at": {
                "type": "string",
                "format": "date-time",
                "description": "When the user account was created"
            },
            "updated_at": {
                "type": "string",
                "format": "date-time",
                "description": "When the user account was last updated"
            },
            "wallet_data": {
                "type": "object",
                "properties": {
                    "%share": {
                        "type": "string",
                        "description": "Encrypted wallet-related data (gmail, sheet_id, secret_salt)"
                    }
                },
                "required": [
                    "%share"
                ]
            },
            "agent_data": {
                "type": "object",
                "properties": {
                    "%share": {
                        "type": "string",
                        "description": "Encrypted AI agent data (deployed_url, agent_uuid, api_key)"
                    }
                },
                "required": [
                    "%share"
                ]
            },
            "public_name": {
                "type": "string",
                "description": "Public display name for the user (unencrypted)"
            },
            "active": {
                "type": "boolean",
                "description": "Whether the user account is active",
                "default": true
            },
            "last_login": {
                "type": "string",
                "format": "date-time",
                "description": "When the user last logged in"
            }
        },
        "required": [
            "_id",
            "created_at",
            "wallet_data",
            "agent_data"
        ]
    }
}