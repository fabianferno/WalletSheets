{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Chat History",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "_id": {
                "type": "string",
                "format": "uuid",
                "coerce": true
            },
            "user_id": {
                "type": "string",
                "description": "Identifier for the user who owns this conversation"
            },
            "created_at": {
                "type": "string",
                "format": "date-time",
                "description": "When the conversation was created"
            },
            "updated_at": {
                "type": "string",
                "format": "date-time",
                "description": "When the conversation was last updated"
            },
            "conversation_metadata": {
                "type": "object",
                "properties": {
                    "%share": {
                        "type": "string",
                        "description": "Encrypted conversation metadata including title and summary"
                    }
                },
                "required": [
                    "%share"
                ]
            },
            "messages": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "role": {
                            "type": "string",
                            "enum": [
                                "system",
                                "user",
                                "assistant",
                                "tool"
                            ],
                            "description": "Role of the message sender"
                        },
                        "content": {
                            "type": "object",
                            "properties": {
                                "%share": {
                                    "type": "string",
                                    "description": "Encrypted message content"
                                }
                            },
                            "required": [
                                "%share"
                            ]
                        },
                        "timestamp": {
                            "type": "string",
                            "format": "date-time",
                            "description": "When the message was sent"
                        },
                        "tool_info": {
                            "type": "object",
                            "properties": {
                                "tool_name": {
                                    "type": "string",
                                    "description": "Name of the tool used"
                                },
                                "input": {
                                    "type": "object",
                                    "properties": {
                                        "%share": {
                                            "type": "string",
                                            "description": "Encrypted tool input"
                                        }
                                    },
                                    "required": [
                                        "%share"
                                    ]
                                },
                                "result": {
                                    "type": "object",
                                    "properties": {
                                        "%share": {
                                            "type": "string",
                                            "description": "Encrypted tool result"
                                        }
                                    },
                                    "required": [
                                        "%share"
                                    ]
                                }
                            },
                            "required": [
                                "tool_name",
                                "input"
                            ]
                        }
                    },
                    "required": [
                        "role",
                        "content",
                        "timestamp"
                    ]
                },
                "minItems": 1
            }
        },
        "required": [
            "_id",
            "user_id",
            "created_at",
            "messages"
        ]
    }
}